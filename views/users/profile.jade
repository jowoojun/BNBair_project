extends ../layout

block content
  .container
    h1="안녕하세요, "+user.name+"입니다!"
    h4="회원가입 : "+moment(user.createdAt).format('YYYY-MM')   
        
    h3.context 위시 리스트
    table.table.table-striped.table-bordered
        thead
          tr
            th 숙소 이름
            th 숙소 도시
        tbody
          each favorite in favorites
            tr
              td
                a(href="/rooms/#{favorites.room_id}")=favorite.room_title
              td
                p=favorite.room_city
    hr
    h3.context 후기
    each post in posts
        .col-md-4.col-xs-12
            h3
                a(href="/rooms/#{post.room_id}")=post.room_hostname+"님께"
        .col-md-8.col-xs-12.context
            h3=post.content
